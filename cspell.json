{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en,vi",
  "dictionaries": ["vi-vn", "typescript", "node", "npm", "html", "css"],
  "import": ["@cspell/dict-vi-vn/cspell-ext.json"],
  "words": [
    "cdhc",
    "tailwindcss",
    "postcss",
    "nextjs",
    "biomejs",
    "biome",
    "tseslint",
    "sonarjs",
    "commitlint",
    "lefthook",
    "knip",
    "cspell",
    "geist",
    "vcs",
    "bunx",
    "Zalo",
    "HTX"
  ],
  "ignorePaths": [
    "node_modules/**",
    ".next/**",
    "public/**",
    "package-lock.json",
    "bun.lockb",
    "*.lock"
  ],
  "ignoreRegExpList": ["/#[0-9a-fA-F]{3,8}/", "/[a-z0-9]{7,40}/i"],
  "minWordLength": 3,
  "allowCompoundWords": true
}
